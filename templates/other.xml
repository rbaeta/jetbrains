<templateSet group="other">
  <template name="loga" value="private static final Log LOGGER = LogFactory.getLog($CLASS$.class.getName());&#10;" description="Inserts Apache commons logger" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="logs" value="private static final Logger LOGGER = LoggerFactory.getLogger($CLASS$.class.getName());&#10;" description="Inserts slf4j logger" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="author" value="Rui Baeta (rui.baeta@feddzai.com)" description="Insert java doc tag @author entry" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_COMMENT" value="true" />
    </context>
  </template>
</templateSet>